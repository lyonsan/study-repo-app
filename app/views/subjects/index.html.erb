<%= render "shared/header_subjects" %>
<div class='room-contents'>
  <h2 class='title'>科目別メモルーム一覧</h2>
  <ul class='room-lists'>
    <%# ユーザーの報告ルームが存在する場合表示 %>
      <%# ルーム毎に表示 %>
    <% @subjects.each do |subject| %>
      <% if subject.user == current_user %>
        <li class='got-list'>
          <%= link_to subject_memos_path(subject) do %>
            <div class='room-info'>
              <h3 class='room-name'>
                <%= subject.name %>
              </h3>
            </div>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <div class='new-message'>
    <%= link_to '#' do %>
    <div class='room-info'>
      <h3 class='room-name'>
        科目/カテゴリーを作成しましょう！
      </h3>
    </div>
    <% end %>
  </div>
  
  <h2 class='title'>新規科目/カテゴリー新規作成はこちら</h2>
  <%= link_to "科目別メモルーム作成ページ", new_subject_path, class: :regi_session %>
</div>
  
<%= render "shared/footer" %>