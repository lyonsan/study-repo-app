<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='home-header'>
  <ul class='header-left'>
    <li><%= link_to 'StudyReport', root_path, class: "header-logo" %></li>
  </ul>
  <div class="header-right">
  <% if user_signed_in? %>
    <ul class='right-lists'>
      <li><%= link_to 'Report', rooms_path, class: "nav-button" %></li>
      <li><%= link_to 'Memo', subjects_path, class: "nav-button" %></li>
      <li><%= link_to 'Article', articles_path, class: "nav-button" %></li>
      <li><%= link_to current_user.nickname, user_path(current_user), class: "nav-button" %></li>
      <li><%= link_to 'Users', users_path, class: "nav-button" %></li>
      <li><%= link_to 'Logout', destroy_user_session_path , method: :delete, class: "nav-button" %></li>
    </ul>
    <div id="box">
      <span></span>
    </div>
  <% else %>
    <ul class='right-lists'>
      <li><%= link_to 'Top', root_path, class: "nav-button" %></li>
      <li><%= link_to 'Users', users_path, class: "nav-button" %></li>
    </ul>
  <% end %>
  </div>
</header>